    button.collision {
     text-decoration: none;
     color: #fff;
     text-transform: uppercase;
     font-family: 'Poppins', sans-serif;
     font-weight: bold;
     display: block;
     height: 50px;
     width: 150px;
     overflow: hidden;
     line-height: 50px;
     text-align: center;
     position: relative;
     border: 1px solid #C70000;
   }
 
   button.collision::before,
   button.collision::after {
     position: absolute;
     content: '';
     width: 20px;
     height: 20px;
     background:#C70000;
     top: 50%;
     border-radius: 50%;
     z-index: -1;
   }
 
   button.collision::before {
     transform: translate(-50%, -50%);
     left: -20px;
   }
 
   button.collision::after {
     transform: translate(50%, -50%);
     right: -20px;
   }
 
