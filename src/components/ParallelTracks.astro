<style lang="scss">

  .flipbox {
    &.flip-bottom {
      &:hover {
        .flipbox-front {
          transform: rotateX(-180deg);
        }
        .flipbox-back {
          transform: rotateX( 0deg);
        }
      }
      .flipbox-back {
        transform: rotateX(180deg);
      }
    }
    &.flip-right {
      &:hover {
        .flipbox-front {
          transform: rotateY(-180deg);
        }
        .flipbox-back {
          transform: rotateY( 0deg);
        }
      }
      .flipbox-back {
        transform: rotateY(180deg);
      }
    }
    &:hover {
      .readmore-button {
        animation-delay: 500ms !important;
      }
    }
    .flipbox-wrapper {
      text-align: center;
      border-radius: 10px;
      position: relative;
      z-index: 1;
      perspective: 1000px;
      min-height: 300px;
      .flipbox-front,
      .flipbox-back {
        transform-style: preserve-3d;
        backface-visibility: hidden;
        perspective: inherit;
        background-size: cover;
        background-repeat: no-repeat;
        background-color: #fff;
        box-shadow: 0 26px 38px 0 rgb(0 0 0 / 20%);
        transition: transform .8s cubic-bezier(0.5, 0.2, 0.2, 0.8);
        border-radius: 10px;
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
      }
      .flipbox-front {
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 1rem;
        background-color: white;
        color: white;
        background-size: cover;
        background-position: center;
        &::before{
          content: '';
          background: #000;
          width: 100%;
          height: 100%;
          position: absolute;
          opacity: 50%;
          border-radius: 10px;
        }
        .title {
          position: relative;
          z-index: 5;
          text-align: center;
          width: 100%;
          transform: translate3d(0, 0, 70px) scale(0.86);
          transform-style: preserve-3d;
          perspective: inherit;
          backface-visibility: hidden;
          font-size: 35px;
          font-weight: 900;
          line-height: 1.2;
          text-shadow: 2px 2px 3px rgba(0, 0, 0, .75);
        }
      }
      .flipbox-back {
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        background-color: #c70000;
        color: white;
        padding: 1rem;
        .title {
          backface-visibility: hidden;
          transform: translate3d(0, -10px, 35px) scale(0.86);
          line-height: 20px;
          font-size: 10rem;
          font-weight: 700;
          opacity: .25;
        }
        .content {
          transform-style: preserve-3d;
          perspective: inherit;
          transform: translateZ(70px) scale(0.86);
          backface-visibility: hidden;
          font-size: 1rem;
          font-weight: 300;
          // padding: 32px;
        }
      }
    }
  }

  .readmore-button {
    display: inline-flex;
    transition: all .3s ease-in-out;
    box-sizing: border-box;
    width: 40px;
    height: 40px;
    position: absolute;
    bottom: -27.5px;
    border-radius: 50%;
    opacity: 0;
    visibility: hidden;
    background: #fd226a;
    justify-content: center;
    align-items: center;
    svg {
      width: 20px;
      height: 20px;
      color: white;
    }
  }

  .readmore-wrapper:hover {
    .readmore-button {
      animation: bounceReadMore .5s ease-in-out both;
      opacity: 1;
      visibility: visible;
      margin: 0;
    }
  }

  @keyframes bounceReadMore {
    0% {
      transform: translateY(-35px) translateZ(20px)
    }
    50% {
      transform: translateY(15px) translateZ(20px)
    }
    100% {
      transform: translateY(0) translateZ(20px)
    }
  }


</style>

