<div class=" relative">
   
  
  <main class=" relative py-24 min-h-screen flex flex-col items-center justify-center overflow-x-clip bg-opacity-40 bg-black bg-cover bg-center bg-no-repeat w-full h-full" id="home" style="background-image:url('/img/bg/1.jpg')">
    <section class="absolute min-h-screen w-full bg-black bg-opacity-40 flex flex-col items-end justify-end">
              
    </section>
    <div id="default-carousel" class="absolute  items-center  justify-center  bg-cover bg-center  bg-no-repeat w-full h-full top-0 left-0 " data-carousel="slide">
      
      <div class="absolute min-h-screen w-full  flex flex-col items-end justify-end">
        <div class=" absolute z-40 min-h-screen w-full flex flex-col items-center justify-center">
          <div class=" absolute flex flex-col md:flex-row gap-5 max-w-4xl w-full items-center justify-center">
            <div class="md:w-1/3">
              <img src="/img/huddle_white.svg" alt="huddle logo" class="h-24 md:h-48">
            </div>
            <div class="md:w-3/4 text-center space-y-3">
              <h1 class="text-3xl md:text-5xl font-extrabold text-white uppercase">
                Where the world comes to huddle
              </h1>
              <h2 class="md:text-xl font-bold text-white uppercase">
                Nov 28, 29, 30 
                <br/>
                at The Leela Kovalam, Trivandrum
              </h2>
              <div class="flex md:flex-row flex-col  pb-6 items-center justify-center gap-2">
                <div class="flex flex-row items-center justify-center gap-4">
                  <button onclick="booking_popup('huddle-global-2024')" class="bg-[#c70000] border-2 border-[#c70000] text-white rounded-md shadow-lg px-5 py-2">Book Tickets</button>
                  <a target="_blank" href="https://pages.razorpay.com/huddle-price-lock"  class="bg-[#c70000] border-2 border-[#c70000] text-white rounded-md shadow-lg px-5 py-2">Pre-Book your slot</a>
                 
                  <!-- <a href="#tracks" class="border-2 cursor-pointer border-white text-white rounded-md shadow-lg px-5 py-2">Explore Event</a> -->
                </div>
                <button onclick="booking_popup('huddle-global-2024')" class="bg-[#c70000] border-2 border-[#c70000] text-white rounded-md shadow-lg px-5 py-2">Register for Expo</button>
              </div>
            </div>
          </div>
          <div class=" absolute bottom-0 left-0 px-4 md:px-10 py-4 bg-[#c70000] w-full text-white grid grid-cols-4 md:grid-cols-8">
            {stats.map((item) => (
              <div class="text-center">
                <div class="font-bold text-xl md:text-3xl flex flex-row justify-center items-center">
                  <div>{item.count}</div>
                  <span class="text-xl mb-3">{item.symbol}</span>
                </div>
                <div class="text-xs md:text-sm text-yellow-400">{item.text}</div>
              </div>
            ))}
          </div>
        </div>
      </div>
      <div class=" min-h-screen overflow-hidden relative ">
        
        <div class="hidden duration-700 ease-in-out " data-carousel-item>
          <div class="relative min-h-screen">
            <div class="absolute -z-30 bg-cover bg-center bg-no-repeat w-full h-full top-0 flex  left-0 " style="background-image:url('/img/bg/1.jpg')"></div>  
